---
export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
  noindex?: boolean;
  nofollow?: boolean;
  type?: 'website' | 'article';
  publishDate?: Date;
  updateDate?: Date;
  author?: string;
  tags?: string[];
  category?: string;
}

const {
  title = 'Ariel Fogel - Software Engineer & Researcher',
  description = 'Software Engineering insights on Rails, AI Security, and Learning from a researcher and practitioner.',
  image = '/images/og-default.jpg',
  canonical,
  noindex = false,
  nofollow = false,
  type = 'website',
  publishDate,
  updateDate,
  author = 'Ariel Fogel',
  tags = [],
  category,
} = Astro.props;

const site = Astro.site || 'https://fogel.dev';
const currentUrl = new URL(Astro.url.pathname, site);
const canonicalUrl = canonical || currentUrl.toString();
const fullImageUrl = image.startsWith('http') ? image : new URL(image, site).toString();

// Structured data for articles
const structuredData =
  type === 'article'
    ? {
        '@context': 'https://schema.org',
        '@type': 'BlogPosting',
        headline: title,
        description: description,
        image: fullImageUrl,
        author: {
          '@type': 'Person',
          name: author,
          url: site.toString(),
        },
        publisher: {
          '@type': 'Person',
          name: 'Ariel Fogel',
          url: site.toString(),
        },
        datePublished: publishDate?.toISOString(),
        dateModified: (updateDate || publishDate)?.toISOString(),
        mainEntityOfPage: {
          '@type': 'WebPage',
          '@id': canonicalUrl,
        },
        keywords: tags.join(', '),
        articleSection: category,
      }
    : {
        '@context': 'https://schema.org',
        '@type': 'WebSite',
        name: 'Ariel Fogel',
        url: site.toString(),
        description: description,
        author: {
          '@type': 'Person',
          name: 'Ariel Fogel',
          jobTitle: 'Software Engineer & Researcher',
          worksFor: {
            '@type': 'Organization',
            name: 'Pillar Security',
          },
        },
      };
---

<!-- Basic Meta Tags -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content={Astro.generator} />

<!-- SEO Meta Tags -->
<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonicalUrl} />

{author && <meta name="author" content={author} />}
{tags.length > 0 && <meta name="keywords" content={tags.join(', ')} />}

<!-- Robots -->
{
  (noindex || nofollow) && (
    <meta name="robots" content={`${noindex ? 'noindex' : 'index'},${nofollow ? 'nofollow' : 'follow'}`} />
  )
}

<!-- Open Graph -->
<meta property="og:type" content={type === 'article' ? 'article' : 'website'} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:image" content={fullImageUrl} />
<meta property="og:image:alt" content={title} />
<meta property="og:site_name" content="Ariel Fogel" />
<meta property="og:locale" content="en_US" />

{type === 'article' && publishDate && <meta property="article:published_time" content={publishDate.toISOString()} />}
{type === 'article' && updateDate && <meta property="article:modified_time" content={updateDate.toISOString()} />}
{type === 'article' && author && <meta property="article:author" content={author} />}
{type === 'article' && category && <meta property="article:section" content={category} />}
{type === 'article' && tags.map((tag) => <meta property="article:tag" content={tag} />)}

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@arielfogel" />
<meta name="twitter:creator" content="@arielfogel" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={fullImageUrl} />

<!-- Additional Meta Tags -->
<meta name="theme-color" content="#1e40af" />
<meta name="color-scheme" content="light dark" />

<!-- RSS Feed -->
<link rel="alternate" type="application/rss+xml" title="Ariel Fogel's Blog" href="/rss.xml" />

<!-- Favicon -->
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" type="image/png" href="/favicon.png" />

<!-- Preconnect to external domains -->
<link rel="preconnect" href="https://images.unsplash.com" />
<link rel="preconnect" href="https://fonts.googleapis.com" />

<!-- Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

<!-- Additional performance hints -->
<meta name="format-detection" content="telephone=no" />
<meta name="msapplication-TileColor" content="#1e40af" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="default" />
